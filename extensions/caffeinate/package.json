{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "caffeinate",
  "title": "Caffeinate for Windows",
  "description": "Prevent the sleep function on your Windows PC",
  "icon": "logo.png",
  "author": "nitinprajwal",
  "license": "MIT",
  "commands": [
    {
      "name": "caffeinate",
      "title": "Caffeinate",
      "subtitle": "Coffee",
      "description": "Prevent your Windows PC from sleeping",
      "mode": "no-view"
    },
    {
      "name": "decaffeinate",
      "title": "Decaffeinate",
      "subtitle": "Coffee",
      "description": "Turn off the caffeine",
      "mode": "no-view"
    },
    {
      "name": "caffeinateWhile",
      "title": "Caffeinate While",
      "subtitle": "Coffee",
      "description": "Prevent your Windows PC from sleeping while a certain app is running",
      "mode": "view"
    },
    {
      "name": "caffeinateToggle",
      "title": "Toggle Caffeinate",
      "subtitle": "Coffee",
      "description": "Toggle caffeination",
      "mode": "no-view"
    },
    {
      "name": "caffeinateFor",
      "title": "Caffeinate for",
      "subtitle": "Coffee",
      "description": "Prevent your Windows PC from sleeping for a certain time",
      "mode": "no-view",
      "arguments": [
        {
          "name": "hours",
          "placeholder": "Hours",
          "type": "text",
          "required": false
        },
        {
          "name": "minutes",
          "placeholder": "Minutes",
          "type": "text",
          "required": false
        },
        {
          "name": "seconds",
          "placeholder": "Seconds",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "caffeinateUntil",
      "title": "Caffeinate Until",
      "subtitle": "Coffee",
      "description": "Prevent your Windows PC from sleeping until a certain time",
      "mode": "no-view",
      "arguments": [
        {
          "name": "time",
          "placeholder": "Time",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "addSchedule",
      "title": "Schedule Caffeination",
      "description": "Schedule caffeination",
      "mode": "view"
    },
    {
      "name": "status",
      "title": "Caffeinate Status",
      "description": "Show the current caffeination status",
      "mode": "no-view",
      "interval": "15s"
    }
  ],
  "tools": [
    {
      "name": "caffeinate-for",
      "title": "Caffeinate for Duration",
      "description": "Keeps your Windows PC awake for a specified duration"
    },
    {
      "name": "caffeinate",
      "title": "Caffeinate",
      "description": "Keep Windows PC awake for unspecified duration."
    },
    {
      "name": "check-caffeination-status",
      "title": "Check Caffeination Status",
      "description": "Check if your Windows PC is currently caffeinated or not."
    },
    {
      "name": "decaffeinate",
      "title": "Decaffeinate",
      "description": "Turn off your Windows PC's sleep prevention."
    },
    {
      "name": "schedule-caffeination",
      "title": "Schedule Caffeination",
      "description": "Add a schedule for your caffeination using AI."
    },
    {
      "name": "caffeinate-while-app-is-running",
      "title": "Caffeinate While App Is Running",
      "description": "While an app is running, turn on caffeination."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^2.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "build": "ray build -e dist",
    "publish": "npx @raycast/api@latest publish",
    "prepublishOnly": "echo \"\n\nIt seems like you are trying to publish the Raycast extension to npm.\n\nIf you did intend to publish it to npm, remove the `prepublishOnly` script and rerun `npm publish` again.\nIf you wanted to publish it to the Raycast Store instead, use `npm run publish` instead.\n\n\" && exit 1"
  },
  "ai": {
    "instructions": "Before running any tool, always run check-caffeination-status before to check the status",
    "evals": [
      {
        "input": "@coffee keep my pc awake for 2 hours",
        "mocks": {
          "check-caffeination-status": {
            "isCaffeinated": false,
            "isScheduled": false
          },
          "caffeinate-for": {
            "success": true
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "caffeinate-for",
              "arguments": {
                "hours": 2
              }
            }
          },
          {
            "meetsCriteria": "Confirms the duration PC will stay awake"
          }
        ]
      },
      {
        "input": "@coffee caffeinate while Chrome is running",
        "mocks": {
          "check-caffeination-status": {
            "isCaffeinated": false,
            "isScheduled": false
          },
          "caffeinate-while-app-is-running": {
            "success": true,
            "application": "Chrome",
            "processId": "12345"
          }
        },
        "expected": [
          {
            "callsTool": "check-caffeination-status"
          },
          {
            "callsTool": {
              "name": "caffeinate-while-app-is-running",
              "arguments": {
                "application": {
                  "includes": "chrome"
                }
              }
            }
          },
          {
            "meetsCriteria": "Confirms that PC will stay awake while Chrome is running"
          }
        ]
      },
      {
        "input": "@coffee stop keeping my pc awake",
        "mocks": {
          "check-caffeination-status": {
            "isCaffeinated": true,
            "isScheduled": false
          },
          "decaffeinate": {
            "success": true
          }
        },
        "expected": [
          {
            "callsTool": "check-caffeination-status"
          },
          {
            "callsTool": "decaffeinate"
          },
          {
            "meetsCriteria": "Confirms that sleep prevention has been disabled"
          }
        ]
      },
      {
        "input": "@coffee is my pc preventing sleep?",
        "mocks": {
          "check-caffeination-status": {
            "isCaffeinated": true,
            "isScheduled": false
          }
        },
        "expected": [
          {
            "callsTool": "check-caffeination-status"
          },
          {
            "meetsCriteria": "Clearly states whether the PC is currently caffeinated or not"
          }
        ]
      },
      {
        "input": "@coffee schedule caffeination for weekdays from 09:00 to 17:00",
        "mocks": {
          "check-caffeination-status": {
            "isCaffeinated": false,
            "isScheduled": false
          },
          "schedule-caffeination": {
            "success": true,
            "days": [
              "monday",
              "tuesday",
              "wednesday",
              "thursday",
              "friday"
            ]
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "schedule-caffeination",
              "arguments": {
                "schedule": {
                  "includes": "weekdays"
                }
              }
            }
          },
          {
            "meetsCriteria": "Confirms the caffeination schedule was created"
          }
        ]
      },
      {
        "input": "@coffee prevent my pc from sleeping",
        "mocks": {
          "check-caffeination-status": {
            "isCaffeinated": false,
            "isScheduled": false
          },
          "caffeinate": {
            "success": true
          }
        },
        "expected": [
          {
            "callsTool": "check-caffeination-status"
          },
          {
            "callsTool": "caffeinate"
          },
          {
            "meetsCriteria": "Confirms that PC will stay awake"
          }
        ]
      }
    ]
  },
  "platforms": [
    "Windows"
  ],
  "categories": [
    "System"
  ]
}